{cover_enabled, true}.
{deps, [
    {base64url, "",
        {git, "https://github.com/dvv/base64url.git", {ref, "bab9f43169"}}},
    {pkcs7, "",
        {git, "https://github.com/camshaft/pkcs7.erl.git", {tag, "1.0.1"}}}
]}.

{eunit_opts,
 [verbose,
  %% eunit truncates output from tests - capture full output in
  %% XML files in .eunit
  {report,{eunit_surefire,[{dir,"."}]}}]}.

{profiles, [
    {test, [
        {deps, [
          {proper,
             {git, "https://github.com/manopapad/proper", {ref, "fa58f82bdc"}}}
        ]}
    ]}
]}.

%% Remove proper from pkcs7 deps
{overrides, [
    {override, pkcs7, [{deps, []}]}
]}.
